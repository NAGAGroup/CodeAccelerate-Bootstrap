{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "github-copilot/gpt-5-mini",

  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "diagrams": {
      "type": "local",
      "command": ["npx", "-y", "mcp-mermaid"],
      "enabled": true
    }
  },

  "agent": {
    "build": {
      "model": "github-copilot/claude-opus-4.5"
    },

    "general": { "disable": true },
    "plan": { "disable": true },

    "primary-orchestrator": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.4,
      "tools": {
        "*": false,
        "question": true,
        "background_task": true,
        "background_output": true,
        "background_cancel": true,
        "todowrite": true,
        "todoread": true
      },
      "permission": {
        "skill": {
          "*": "allow"
        }
      }
    },

    "tech_lead": {
      "mode": "subagent",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.5,
      "tools": {
        "*": false,
        "read": true,
        "edit": true,
        "write": true,
        "grep": true,
        "glob": true,
        "task": true,
        "skill": true,
        "todowrite": true,
        "todoread": true
      },
      "permission": {
        "skill": {
          "*": "allow",
          "collaborative-design": "deny",
          "delegating-to-tech-lead": "deny"
        }
      }
    },

    "junior_dev": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.15,
      "tools": {
        "*": false,
        "read": true,
        "edit": true,
        "write": true,
        "grep": true,
        "glob": true,
        "skill": true,
        "todowrite": true,
        "todoread": true
      },
      "permission": {
        "skill": {
          "*": "allow",
          "delegating-*": "deny",
          "collaborative-design": "deny",
          "systematic-debugging": "deny",
          "test-driven-development": "deny",
          "code-review": "deny",
          "writing-*": "deny",
          "neo-github": "deny",
          "neo-jira": "deny",
          "neo-jenkins": "deny",
          "neo-benchmarking": "deny",
          "finishing-a-development-branch": "deny",
          "creating-mermaid-diagrams": "deny"
        }
      }
    },

    "explore": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.3,
      "tools": {
        "*": false,
        "read": true,
        "grep": true,
        "glob": true,
        "skill": true
      },
      "permission": {
        "skill": {
          "*": "allow",
          "delegating-*": "deny",
          "collaborative-design": "deny",
          "neo-build-system": "deny",
          "neo-committing": "deny",
          "neo-benchmarking": "deny",
          "systematic-debugging": "deny",
          "test-driven-development": "deny",
          "code-review": "deny",
          "writing-*": "deny",
          "neo-github": "deny",
          "neo-jira": "deny",
          "neo-jenkins": "deny",
          "finishing-a-development-branch": "deny",
          "creating-mermaid-diagrams": "deny"
        }
      }
    },

    "tester": {
      "agent": "agent/tester.md",
      "model": "github-copilot/claude-haiku-4.5",
      "mode": "subagent",
      "temperature": 0.3,
      "tools": {
        "*": false,
        "read": true,
        "grep": true,
        "glob": true,
        "bash": true,
        "skill": true
      },
      "permission": {
        "skill": {
          "*": "allow",
          "collaborative-design": "deny",
          "delegating-to-tech-lead": "deny",
          "delegating-to-junior-dev": "deny",
          "delegating-to-explore": "deny",
          "delegating-to-librarian": "deny",
          "delegating-to-staff-editor": "deny",
          "delegating-to-tester": "deny",
          "test-driven-development": "deny",
          "code-review": "deny",
          "writing-skills": "deny",
          "creating-mermaid-diagrams": "deny"
        }
      }
    },

    "librarian": {
      "mode": "subagent",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.6,
      "tools": {
        "*": false,
        "webfetch": true,
        "context7": true,
        "skill": true
      },
      "permission": {
        "skill": {
          "*": "allow",
          "delegating-*": "deny",
          "collaborative-design": "deny",
          "neo-*": "deny",
          "systematic-debugging": "deny",
          "test-driven-development": "deny",
          "code-review": "deny",
          "writing-*": "deny",
          "finishing-a-development-branch": "deny",
          "creating-mermaid-diagrams": "deny",
          "using-git-worktrees": "deny"
        }
      }
    },

    "staff_editor": {
      "mode": "subagent",
      "model": "github-copilot/gemini-3-pro-preview",
      "temperature": 0.7,
      "tools": {
        "*": false,
        "read": true,
        "skill": true
      },
      "permission": {
        "skill": {
          "*": "allow",
          "delegating-*": "deny",
          "collaborative-design": "deny",
          "neo-*": "deny",
          "systematic-debugging": "deny",
          "test-driven-development": "deny",
          "code-review": "deny",
          "writing-*": "deny",
          "finishing-a-development-branch": "deny",
          "creating-mermaid-diagrams": "deny",
          "using-git-worktrees": "deny"
        }
      }
    }
  },

  "default_agent": "primary-orchestrator"
}
