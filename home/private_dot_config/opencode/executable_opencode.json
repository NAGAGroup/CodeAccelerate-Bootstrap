{
  "$schema": "https://opencode.ai/config.json",

  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "memory": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-memory"],
      "enabled": true
    },
    "diagrams": {
      "type": "local",
      "command": ["npx", "-y", "mcp-mermaid"]
    }
  },

  "tools": {
    "task": false,
    "diagrams*": false,
    "background_*": false
  },

  "agent": {
    "primary": {
      "model": "github-copilot/claude-opus-4.5",
      "description": "Primary orchestrator - strategic planning and delegation",
      "temperature": 0.3,
      "mode": "primary",

      "tools": {
        "background_task": true,
        "background_output": true,
        "background_cancel": true,
        "todowrite": true,
        "todoread": true,
        "find_skills": true,
        "use_skill": true,
        "skill": true,
        "memory_*": true,
        "view": false,
        "read": false,
        "write": false,
        "edit": false,
        "str_replace": false,
        "create_file": false,
        "bash_tool": false,
        "bash": false,
        "grep": false,
        "glob": false,
        "ast_grep": false,
        "lsp_*": false,
        "web_search": false,
        "web_fetch": false,
        "webfetch": false,
        "context7*": false
      },

      "prompt": "{file:./prompts/primary-orchestrator.md}"
    },

    "primary with tools": {
      "model": "github-copilot/claude-opus-4.5",
      "description": "Primary orchestrator - strategic planning and delegation",
      "temperature": 0.3,
      "mode": "primary",

      "prompt": "{file:./prompts/primary-orchestrator.md}"
    },

    "plan": { "disable": true },

    "general": {
      "model": "github-copilot/claude-sonnet-4.5",
      "description": "General agent - technical analysis and sub-orchestration",
      "temperature": 0.2,
      "mode": "subagent",

      "tools": {
        "view": true,
        "grep": true,
        "glob": true,
        "ast_grep": true,
        "lsp_*": true,
        "bash_tool": true,
        "task": true,
        "background_task": true,
        "background_output": true,
        "background_cancel": true,
        "str_replace": false,
        "create_file": false
      },

      "prompt": "{file:./prompts/general.md}"
    },

    "build": {
      "model": "github-copilot/claude-sonnet-4.5",
      "description": "Build agent - code implementation and modification",
      "temperature": 0.1,
      "mode": "subagent",

      "tools": {
        "view": true,
        "str_replace": true,
        "create_file": true,
        "bash_tool": true,
        "grep": true,
        "glob": true,
        "ast_grep": true,
        "lsp_*": true,
        "task": false,
        "background_task": false,
        "background_output": false,
        "background_cancel": false
      },

      "prompt": "{file:./prompts/build.md}"
    },

    "explore": {
      "model": "github-copilot/grok-code-fast-1",
      "description": "Explore agent - fast file navigation and pattern matching",
      "temperature": 0,
      "mode": "subagent",

      "tools": {
        "view": true,
        "grep": true,
        "glob": true,
        "ast_grep": true,
        "lsp_*": true,
        "str_replace": false,
        "create_file": false,
        "bash_tool": false,
        "task": false,
        "background_task": false
      },

      "prompt": "{file:./prompts/explore.md}"
    },

    "librarian": {
      "model": "github-copilot/claude-sonnet-4.5",
      "description": "Librarian agent - research and documentation lookup",
      "temperature": 0.2,
      "mode": "subagent",

      "tools": {
        "view": true,
        "grep": true,
        "web_search": true,
        "web_fetch": true,
        "context7*": true,
        "str_replace": false,
        "create_file": false,
        "bash_tool": false,
        "task": false,
        "background_task": false
      },

      "prompt": "{file:./prompts/librarian.md}"
    },

    "document-writer": {
      "model": "github-copilot/gemini-3-pro-preview",
      "description": "Document writer - technical documentation specialist",
      "temperature": 0.3,
      "mode": "subagent",

      "tools": {
        "view": true,
        "str_replace": true,
        "create_file": true,
        "grep": true,
        "glob": true,
        "lsp_document_symbols": true,
        "diagrams*": true,
        "bash_tool": false,
        "task": false,
        "background_task": false
      },

      "prompt": "{file:./prompts/document-writer.md}"
    },

    "multimodal": {
      "model": "github-copilot/gemini-2.5-pro",
      "description": "Multimodal agent - visual content analysis",
      "temperature": 0.1,
      "mode": "subagent",

      "tools": {
        "view": true,
        "str_replace": false,
        "create_file": false,
        "bash_tool": false,
        "grep": false,
        "glob": false,
        "task": false,
        "background_task": false
      },

      "prompt": "{file:./prompts/multimodal.md}"
    }
  },

  "default_agent": "primary",

  "plugin": []
}
