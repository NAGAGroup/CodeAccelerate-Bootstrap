{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "github-copilot/gpt-5-mini",

  "permission": {
    "edit": "allow",
    "bash": "allow",
    "external_directory": "deny"
  },

  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "diagrams": {
      "type": "local",
      "command": ["npx", "-y", "mcp-mermaid"],
      "enabled": true
    }
  },

  "agent": {
    "primary-orchestrator": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.4,
      "tools": {
        "read": false,
        "edit": false,
        "write": false,
        "bash": false,
        "grep": false,
        "glob": false,
        "task": false,
        "webfetch": false,
        "context7*": false,
        "diagrams*": false,
        "question": true
      },
      "permission": {
        "skill": {
          "*": "allow"
        }
      }
    },

    "agents": {
      "general": false,
      "build": false,
      "plan": false
    },

    "tech_lead": {
      "mode": "subagent",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.5,
      "tools": {
        "background_task": false,
        "background_output": false,
        "background_cancel": false,
        "webfetch": false,
        "context7*": false,
        "diagrams*": false
      },
      "permission": {
        "skill": {
          "*": "allow",
          "collaborative-design": "deny",
          "delegating-to-tech-lead": "deny"
        }
      }
    },

    "junior_dev": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.15,
      "tools": {
        "background_task": false,
        "background_output": false,
        "background_cancel": false,
        "task": false,
        "todowrite": false,
        "todoread": false,
        "webfetch": false,
        "context7*": false,
        "diagrams*": false
      },
      "permission": {
        "skill": {
          "*": "allow",
          "delegating-*": "deny",
          "collaborative-design": "deny",
          "systematic-debugging": "deny",
          "test-driven-development": "deny",
          "code-review": "deny",
          "writing-*": "deny",
          "neo-github": "deny",
          "neo-jira": "deny",
          "neo-jenkins": "deny",
          "neo-benchmarking": "deny",
          "finishing-a-development-branch": "deny",
          "creating-mermaid-diagrams": "deny"
        }
      }
    },

    "explore": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.3,
      "tools": {
        "edit": false,
        "write": false,
        "background_task": false,
        "background_output": false,
        "background_cancel": false,
        "task": false,
        "todowrite": false,
        "todoread": false,
        "webfetch": false,
        "context7*": false,
        "diagrams*": false
      },
      "permission": {
        "skill": {
          "*": "allow",
          "delegating-*": "deny",
          "collaborative-design": "deny",
          "neo-build-system": "deny",
          "neo-committing": "deny",
          "neo-benchmarking": "deny",
          "systematic-debugging": "deny",
          "test-driven-development": "deny",
          "code-review": "deny",
          "writing-*": "deny",
          "neo-github": "deny",
          "neo-jira": "deny",
          "neo-jenkins": "deny",
          "finishing-a-development-branch": "deny",
          "creating-mermaid-diagrams": "deny"
        }
      }
    },

    "librarian": {
      "mode": "subagent",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.6,
      "tools": {
        "read": false,
        "edit": false,
        "write": false,
        "bash": false,
        "grep": false,
        "glob": false,
        "background_task": false,
        "background_output": false,
        "background_cancel": false,
        "task": false,
        "todowrite": false,
        "todoread": false,
        "diagrams*": false
      },
      "permission": {
        "skill": {
          "*": "allow",
          "delegating-*": "deny",
          "collaborative-design": "deny",
          "neo-*": "deny",
          "systematic-debugging": "deny",
          "test-driven-development": "deny",
          "code-review": "deny",
          "writing-*": "deny",
          "finishing-a-development-branch": "deny",
          "creating-mermaid-diagrams": "deny",
          "using-git-worktrees": "deny"
        }
      }
    },

    "staff_editor": {
      "mode": "subagent",
      "model": "github-copilot/gemini-3-pro-preview",
      "temperature": 0.7,
      "tools": {
        "edit": false,
        "write": false,
        "bash": false,
        "grep": false,
        "glob": false,
        "background_task": false,
        "background_output": false,
        "background_cancel": false,
        "task": false,
        "todowrite": false,
        "todoread": false,
        "webfetch": false,
        "context7*": false,
        "diagrams*": false
      },
      "permission": {
        "skill": {
          "*": "allow",
          "delegating-*": "deny",
          "collaborative-design": "deny",
          "neo-*": "deny",
          "systematic-debugging": "deny",
          "test-driven-development": "deny",
          "code-review": "deny",
          "writing-*": "deny",
          "finishing-a-development-branch": "deny",
          "creating-mermaid-diagrams": "deny",
          "using-git-worktrees": "deny"
        }
      }
    }
  },

  "default_agent": "primary-orchestrator"
}
